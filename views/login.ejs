<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>EzShift Login</title>
    <link rel="stylesheet" href="/css/authstyle.css" />
  </head>
  <main>
    <div class="container">
      <form action="/login" method="POST">
        <div class="login-form">
          <h2>Login</h2>
          <% errors.forEach(error => { %>
          <p class="error"><%= error %></p>
          <% }) %>
          <input
            type="text"
            id="username"
            name="username"
            placeholder="Username"
            autocomplete="off"
          />
          <input
            type="password"
            id="password"
            name="password"
            placeholder="Password"
            autocomplete="off"
          />
          <button>Login â†’</button>
          <br />
          <br />
          <p><a href="/">Need an account?</a></p>
        </div>
      </form>
    </div>
  </main>
</html>
